# -----------------------------------------------------
# Автоматический запуск
# -----------------------------------------------------

# -----------------------------------------------------
# Fastfetch (не запускаем в Zed)
# -----------------------------------------------------
if [[ $(tty) == *"pts"* ]] && [[ $TERM_PROGRAM != "zed" ]]; then
    fastfetch --config examples/13
elif [[ $(tty) != *"pts"* ]]; then
    echo
    if [ -f /bin/hyprctl ]; then
        echo "Запустить Hyprland можно с помощью команды Hyprland"
    fi
fi

# -----------------------------------------------------
# Fast Node Manager
# -----------------------------------------------------
eval "$(fnm env --use-on-cd --shell zsh)"

# -----------------------------------------------------
# Starship
# -----------------------------------------------------
eval "$(starship init zsh)"

# -----------------------------------------------------
# Zoxide
# -----------------------------------------------------
eval "$(zoxide init --cmd cd zsh)"

# -----------------------------------------------------
# Atuin
# -----------------------------------------------------
eval "$(atuin init zsh)"
